{>"standardForm"/}
{<formTitle}{>"avatar" avatar=targetUser.avatar/}{targetUser.firstName} {targetUser.lastName} <small>Set Coins</small>{/formTitle}
{<formFields}
  <div class="form-group">
    <label for="coins">Coins</label>
    <input name="coins" type="number" class="form-control" id="coins" value={targetUser.coins} required></input>
  </div>
{/formFields}
{<formButtons}
  <button type="submit" class="btn btn-default">Save</button>
{/formButtons}
